<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% @posts.each do |post| %>
    <div class="card text-white bg-dark mb-3 mx-auto col-md-8 mx-auto mx w-75">
    <div class="card-header"> Post by user: <%= post.user.nickname %></div>
      <div id="user_id" class="d-none"> <%= post.user_id %></div>
      <div class="card-body">
        <h5 class="card-title"> Title: <%= post.title %></h5>
        <p class="card-text">post.text</p>
        <p><%= link_to 'Show', post %>
          <% if current_user.id == post.user_id %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
      </div>
    </div>
<% end %>


